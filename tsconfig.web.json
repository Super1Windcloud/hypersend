{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts"
    , "src/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "test_ws"
  ],
  "compilerOptions": {
    "esModuleInterop" : true,
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ] ,
      "@/*": [
        "src/*"
      ]
    }

  }
}
